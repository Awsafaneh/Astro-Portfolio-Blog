---
const { company, position, employementDate, roles, technologies } = Astro.props;
---

<style>
  .card {
    border: 1px solid var(--gray-light);
    border-radius: 8px;
    padding: 16px;
    margin: 16px 0;
    box-shadow: var(--box-shadow);
    background-color: var(--accent-dark);
    color: var(--text-light);
  }

  .card-header {
    font-size: 1.25em;
    font-weight: bold;
    margin-bottom: 8px;
    color: var(--accent);
  }

  .card-subheader {
    font-size: 1em;
    color: var(--gray);
    margin-bottom: 8px;
  }

  .card-content {
    margin-bottom: 8px;
  }

  .card-content ul {
    list-style-type: disc;
    padding-left: 20px;
  }

  .card-content ul li {
    margin-bottom: 4px;
  }

  .card-footer {
    font-size: 0.9em;
    color: var(--gray-dark);
  }
</style>

<div class="card">
  <div class="card-header">{position} at {company}</div>
  <div class="card-subheader">{employementDate}</div>
  <div class="card-content">
    <p><strong>Roles:</strong></p>
    <ul>
      {roles.map((role) => <li>{role}</li>)}
    </ul>
  </div>
  <div class="card-content">
    <p><strong>Technologies Used:</strong></p>
    <ul>
      {technologies.map((tech) => <li>{tech}</li>)}
    </ul>
  </div>
  <div class="card-footer">Employment Date: {employementDate}</div>
</div>

---
import BaseHead from "@astro/base/BaseHead.astro";
import Header from "@astro/header/Header.astro";
import Footer from "@astro/footer/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

export const prerender = true;
---

<html lang="en">
  <head>
    <BaseHead title={""} description={""} />
    <SpeedInsights />
    <style>
      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
      }

      @media (max-width: 768px) {
        .container {
          flex-direction: column;
          justify-content: center;
          align-items: center;
        }
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Poppins", sans-serif;
        margin: 0 0 0.5em 0;
        color: var(--text-light);
        line-height: 1.2;
        font-weight: 700;
      }

      h1 {
        font-size: 2.5em;
      }

      h2 {
        font-size: 2em;
      }

      h3 {
        font-size: 1.6em;
      }

      h4 {
        font-size: 1.3em;
      }

      h5 {
        font-size: 1.1em;
      }

      h6 {
        font-size: 0.9em;
        font-weight: 600;
      }

      @media (max-width: 768px) {
        h1 {
          font-size: 2em;
        }

        h2 {
          font-size: 1.7em;
        }

        h3 {
          font-size: 1.4em;
        }

        h4 {
          font-size: 1.2em;
        }

        h5 {
          font-size: 1em;
        }

        h6 {
          font-size: 0.8em;
        }
      }
    </style>
  </head>
  <body>
    <Header />

    <main class="w-full max-w-5xl mx-auto px-4 py-8">
      <article>
        <div class="prose mx-auto text-gray-800 text-justify">
          <div class="mb-8 text-justify">
            <div>
              <slot />
            </div>
          </div>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
